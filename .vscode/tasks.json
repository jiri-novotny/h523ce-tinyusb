{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "serial-number",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "STM32_Programmer_CLI -l stlink | grep 'ST-LINK SN' | cut -b 35-",
                "description": "Select ST-Link serial number",
                "useSingleResult": true,
            }
        }
    ],
    "tasks": [
        {
            "label": "Clean All",
            "type": "shell",
            "command": "rm -rf build/",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
                "command": "rm -rf build/${command:cpptools.activeConfigName}",
            "problemMatcher": []
        },
        {
            "label": "Configure",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean"
            ],
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild/${command:cpptools.activeConfigName}",
                "-GNinja",
                "-DCMAKE_BUILD_TYPE=MinSizeRel",
                "-DCMAKE_TOOLCHAIN_FILE=${env:STM32CLT_PATH}/gcc-arm-none-eabi.cmake",
                "-D${command:cpptools.activeConfigName}=1",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "DbgConfigure",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean"
            ],
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild/${command:cpptools.activeConfigName}",
                "-GNinja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${env:STM32CLT_PATH}/gcc-arm-none-eabi.cmake",
                "-D${command:cpptools.activeConfigName}=1",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "ninja -Cbuild/${command:cpptools.activeConfigName}",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Reset",
            "type": "shell",
            "command": "dfu-util -d 0483:df11 -a 0 -R",
            "problemMatcher": []
        },
        {
            "label": "Deploy",
            "type": "shell",
            "command": "STM32_Programmer_CLI -c port=USB1 -v -d build/stm32h5/h523ce-tinyusb.hex",
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "clang-format-18 --verbose -i $(find * -type f -name '*.c' -o -name '*.h' -o -name '*.cpp' -o -name '*.hpp')",
            "problemMatcher": []
        }
    ]
}
